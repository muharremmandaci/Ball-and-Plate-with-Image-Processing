        <Button x:Name="btn_stop" Content="STOP" HorizontalAlignment="Left" Margin="690,299,0,0" VerticalAlignment="Top" Width="154" Height="44" Click="btn_stop_Click"/>
        <Label x:Name="lbl_y" Content="Label" HorizontalAlignment="Left" Margin="142,524,0,0" VerticalAlignment="Top" Width="62" FontSize="20" RenderTransformOrigin="0.71,0.423"/>
    </Grid>
